<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_marginTop="5dip">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_margin="5dip">

		<Button android:id="@+id/name" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:gravity="right"
			 android:text="Name" android:textColor="@color/button_down"/><!--

		<Button android:id="@+id/center" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:gravity="right"
			android:text="Center" />


		--><Button android:id="@+id/symbol" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:gravity="right"
			 android:text="Symbol" />

		<EditText android:id="@+id/username" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_marginLeft="5dip" />
	</LinearLayout>

</LinearLayout>